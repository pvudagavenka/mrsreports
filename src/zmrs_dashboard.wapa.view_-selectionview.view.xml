<mvc:View controllerName="ZINFRA_MRS_PLANNING_BOARD.ZINFRA_MRS_PLANNING_BOARD.controller.SelectionView"                                                                                                                                                        
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified"                                                                                                                          
	xmlns:smartMultiInput="sap.ui.comp.smartmultiinput" xmlns:smartForm="sap.ui.comp.smartform" xmlns:core="sap.ui.core"                                                                                                                                          
	class="sapUiSizeCompact">                                                                                                                                                                                                                                     
	<App id="app">                                                                                                                                                                                                                                                
		<pages>                                                                                                                                                                                                                                                      
			<Page id="page" title="{i18n>title}">                                                                                                                                                                                                                       
				<content>                                                                                                                                                                                                                                                  
					<l:Grid containerQuery="true" defaultSpan="XL6 L4">                                                                                                                                                                                                       
						<!-- Calendar -->                                                                                                                                                                                                                                        
						<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">                                                                                                                                                                               
							<headerToolbar>                                                                                                                                                                                                                                         
								<Toolbar height="3rem">                                                                                                                                                                                                                                
									<Title text="Selection Date Range:"/>                                                                                                                                                                                                                 
								</Toolbar>                                                                                                                                                                                                                                             
							</headerToolbar>                                                                                                                                                                                                                                        
							<content>                                                                                                                                                                                                                                               
								<l:VerticalLayout>                                                                                                                                                                                                                                     
									<u:Calendar id="idCalendar" select="handleCalendarSelect" intervalSelection="true" weekNumberSelect="handleWeekNumberSelect"/>                                                                                                                        
									<Label text="From (yyyy-mm-dd):" class="labelMarginLeft"/>                                                                                                                                                                                            
									<Text text="{selModel>/selDateFrom}" class="labelMarginLeft"/>                                                                                                                                                                                        
									<Label text="To (yyyy-mm-dd):" class="labelMarginLeft"/>                                                                                                                                                                                              
									<Text text="{selModel>/selDateTo}" class="labelMarginLeft"/>                                                                                                                                                                                          
								</l:VerticalLayout>                                                                                                                                                                                                                                    
							</content>                                                                                                                                                                                                                                              
						</Panel>                                                                                                                                                                                                                                                 
						<!-- View Selection -->                                                                                                                                                                                                                                  
						<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">                                                                                                                                                                               
							<headerToolbar>                                                                                                                                                                                                                                         
								<Toolbar height="3rem">                                                                                                                                                                                                                                
									<Title text="View Type:"/>                                                                                                                                                                                                                            
								</Toolbar>                                                                                                                                                                                                                                             
							</headerToolbar>                                                                                                                                                                                                                                        
							<RadioButtonGroup id="rb_view_type" selectedIndex="0">                                                                                                                                                                                                  
								<buttons>                                                                                                                                                                                                                                              
									<RadioButton text="{i18n>txtDailyView}" id="rbDailyView"/>                                                                                                                                                                                            
									<RadioButton text="{i18n>txtResView}" id="rbResourceView"/>                                                                                                                                                                                           
								</buttons>                                                                                                                                                                                                                                             
							</RadioButtonGroup>                                                                                                                                                                                                                                     
						</Panel>                                                                                                                                                                                                                                                 
						<!-- Filters -->                                                                                                                                                                                                                                         
						<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">                                                                                                                                                                               
							<headerToolbar>                                                                                                                                                                                                                                         
								<Toolbar height="3rem">                                                                                                                                                                                                                                
									<Title text="Filters:"/>                                                                                                                                                                                                                              
								</Toolbar>                                                                                                                                                                                                                                             
							</headerToolbar>                                                                                                                                                                                                                                        
							<smartForm:SmartForm editable="true">                                                                                                                                                                                                                   
								<smartForm:Group>                                                                                                                                                                                                                                      
									<smartForm:GroupElement>                                                                                                                                                                                                                              
										<smartMultiInput:SmartMultiInput id="idWorkCenter" entitySet="WorkCenterSet" value="{Objid}" supportRanges="true" textLabel="Work Centers"/>                                                                                                         
									</smartForm:GroupElement>                                                                                                                                                                                                                             
									<smartForm:GroupElement>                                                                                                                                                                                                                              
										<smartMultiInput:SmartMultiInput id="idPerson" entitySet="PersonSet" value="{Pernr}" supportRanges="true" textLabel="Persons"/>                                                                                                                      
									</smartForm:GroupElement>                                                                                                                                                                                                                             
									<smartForm:GroupElement>                                                                                                                                                                                                                              
										<smartMultiInput:SmartMultiInput id="idNNResource" entitySet="NNResourceSet" value="{NnResNumber}" supportRanges="true"                                                                                                                              
											textLabel="NN Resources"/>                                                                                                                                                                                                                          
									</smartForm:GroupElement>                                                                                                                                                                                                                             
									<smartForm:GroupElement>                                                                                                                                                                                                                              
										<smartMultiInput:SmartMultiInput id="idTimeAllocType" entitySet="TimeAllocationTypeSet" value="{TaType}" supportRanges="true"                                                                                                                        
											textLabel="Time Allocation Types"/>                                                                                                                                                                                                                 
									</smartForm:GroupElement>                                                                                                                                                                                                                             
								</smartForm:Group>                                                                                                                                                                                                                                     
							</smartForm:SmartForm>                                                                                                                                                                                                                                  
						</Panel>                                                                                                                                                                                                                                                 
					</l:Grid>                                                                                                                                                                                                                                                 
				</content>                                                                                                                                                                                                                                                 
				<footer>                                                                                                                                                                                                                                                   
					<Bar id="idFooterBar">                                                                                                                                                                                                                                    
						<contentMiddle>                                                                                                                                                                                                                                          
							<Button icon="sap-icon://bbyd-dashboard" text="View DashBoard" type="Emphasized" press="onDashBoardClick" enabled="true"/>                                                                                                                              
						</contentMiddle>                                                                                                                                                                                                                                         
					</Bar>                                                                                                                                                                                                                                                    
				</footer>                                                                                                                                                                                                                                                  
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    