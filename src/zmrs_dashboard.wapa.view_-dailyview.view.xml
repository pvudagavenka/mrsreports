<mvc:View id="idDailyView" controllerName="ZINFRA_MRS_PLANNING_BOARD.ZINFRA_MRS_PLANNING_BOARD.controller.DailyView"                                                                                                                                           
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:html="http://www.w3.org/1999/xhtml">                                                                                                                        
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="Daily View" showNavButton="true" navButtonPress="onNavBackDailyView">                                                                                                                                                                          
				<subHeader>                                                                                                                                                                                                                                                
					<Toolbar>                                                                                                                                                                                                                                                 
						<ToolbarSpacer/>                                                                                                                                                                                                                                         
						<SegmentedButton id="selNDays" selectionChange="onSelNDays">                                                                                                                                                                                             
							<items>                                                                                                                                                                                                                                                 
								<SegmentedButtonItem text="7 Days" key="7"/>                                                                                                                                                                                                           
								<SegmentedButtonItem text="14 Days" key="14"/>                                                                                                                                                                                                         
								<SegmentedButtonItem text="21 Days" key="21"/>                                                                                                                                                                                                         
							</items>                                                                                                                                                                                                                                                
						</SegmentedButton>                                                                                                                                                                                                                                       
						<ToolbarSpacer/>                                                                                                                                                                                                                                         
					</Toolbar>                                                                                                                                                                                                                                                
				</subHeader>                                                                                                                                                                                                                                               
				<content>                                                                                                                                                                                                                                                  
					<!--Operations/Networks-->                                                                                                                                                                                                                                
					<PlanningCalendar id="idDailyViewOperations" showRowHeaders="false" stickyHeader="true" appointmentsVisualization="Filled"                                                                                                                                
						groupAppointmentsMode="Expanded" showIntervalHeaders="false" showEmptyIntervalHeaders="false" startDateChange="onCalendarPanning"                                                                                                                        
						class="cssOperations" startDate="{model: 'operationsModel', path: '/Seldatefrom'}" maxDate="{model: 'operationsModel', path: '/Seldateto'}"                                                                                                              
						rows="{model: 'operationsModel', path: '/DailyView_Sections/results', templateShareable: 'true'}">                                                                                                                                                       
						<rows>                                                                                                                                                                                                                                                   
							<PlanningCalendarRow appointments="{model: 'operationsModel', path : 'Section_OperAllocs/results', templateShareable: 'true'}">                                                                                                                         
								<appointments>                                                                                                                                                                                                                                         
									<u:CalendarAppointment startDate="{operationsModel>Operallocstart}" endDate="{operationsModel>Operallocend}"                                                                                                                                          
										title="{operationsModel>Operresource}" text="{operationsModel>Operallocinfo}" color="{operationsModel>Operallocstatus}"/>                                                                                                                            
								</appointments>                                                                                                                                                                                                                                        
							</PlanningCalendarRow>                                                                                                                                                                                                                                  
						</rows>                                                                                                                                                                                                                                                  
					</PlanningCalendar>                                                                                                                                                                                                                                       
					<!--Time Allocations-->                                                                                                                                                                                                                                   
					<PlanningCalendar id="idDailyViewAllocations" showRowHeaders="false" stickyHeader="true" appointmentsVisualization="Filled"                                                                                                                               
						groupAppointmentsMode="Expanded" showIntervalHeaders="false" showEmptyIntervalHeaders="false" startDateChange="onCalendarPanning"                                                                                                                        
						class="cssAllocations" startDate="{model: 'allocationsModel', path: '/Seldatefrom'}"                                                                                                                                                                     
						maxDate="{model: 'allocationsModel', path: '/Seldateto'}"                                                                                                                                                                                                
						rows="{model: 'allocationsModel', path: '/DailyView_Sections/results', templateShareable: 'true'}">                                                                                                                                                      
						<rows>                                                                                                                                                                                                                                                   
							<PlanningCalendarRow appointments="{model: 'allocationsModel', path : 'Section_OperAllocs/results', templateShareable: 'true'}">                                                                                                                        
								<appointments>                                                                                                                                                                                                                                         
									<u:CalendarAppointment startDate="{allocationsModel>Operallocstart}" endDate="{allocationsModel>Operallocend}"                                                                                                                                        
										title="{allocationsModel>Operresource}" text="{allocationsModel>Operallocinfo}" color="{allocationsModel>Operallocstatus}"/>                                                                                                                         
								</appointments>                                                                                                                                                                                                                                        
							</PlanningCalendarRow>                                                                                                                                                                                                                                  
						</rows>                                                                                                                                                                                                                                                  
					</PlanningCalendar>                                                                                                                                                                                                                                       
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    